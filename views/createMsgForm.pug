extends layout

block content
 div.formContainer
  div.formWrapper
   h1.form-header Create a message
   form(method='POST' action='')
      input#title.form(type='text', placeholder='Title' name='title')
      input#text.form(type='text', placeholder='Text' name='text' )
      button.submitBtn(type='submit') Submit

   if errors
    for error in errors
     ul
      li.errMsg= error.msg
  
