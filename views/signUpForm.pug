extends layout

block content
 div.formContainer
  div.formWrapper
   h1.form-header Sign up
   form(method='POST' action='')
      input#username(type='text', placeholder='Name' name='username')
      input#password(type='password', placeholder='Create password' name='password')
      input#confirmPassword(type='password', placeholder='Confirm password' name='confirmPassword')
      button.submitBtn(type='submit') Submit

   if errors
    ul
     for error in errors
      li.errMsg= error.msg
   
